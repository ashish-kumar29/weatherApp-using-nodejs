<!DOCTYPE html>
<html lang="en">
<head>
   {{>headerlink}}
</head>
<body>
    {{>navbar}}
    <!-- main_header -->
    <div class="conatiner-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div> 
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">20 Nov</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Temp here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i> </p>
                        </div>
                        
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <!-- Footer -->
    {{>footer}}
  <!-- Footer -->
  <script src="js/main.js"></script>
</body>
</html>